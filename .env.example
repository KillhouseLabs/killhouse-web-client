# Application
PORT=3001
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME="Killhouse"

# Database - Supabase PostgreSQL
# Transaction pooler (port 6543) - for application queries
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"
# Session pooler (port 5432) - for Prisma migrations
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# Authentication (NextAuth.js v5)
# Generate secret: openssl rand -base64 32
AUTH_SECRET=your-secret-key-here
AUTH_URL=http://localhost:3001

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=

# Stripe (Payment) - Legacy
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# PortOne (Payment)
# V2 API 사용: https://developers.portone.io/
PORTONE_API_SECRET=
NEXT_PUBLIC_PORTONE_STORE_ID=
NEXT_PUBLIC_PORTONE_CHANNEL_KEY=

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=

# Analysis API (Backend service)
ANALYSIS_API_URL=http://localhost:8000
ANALYSIS_API_KEY=

# Sandbox API
SANDBOX_API_URL=http://localhost:8000

# Scanner Engine API
SCANNER_API_URL=http://localhost:8082
SCANNER_API_KEY=your_scanner_api_key_here

# Auth callback URL
NEXTAUTH_URL=http://localhost:3001
